<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MESAS || Wings and Chunks || WAC-POS</title>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/mesas.css">
</head>
<body>
    <header>
        <img src="/img/logo.jpg" alt="Wings and Chunks" class="header_logo">
        <button class="btn-danger" id="btnSalir">Regresar</button>
    </header>
    <main class="container" id="main">
        <% Mesas.forEach((mesa)=>{ %>
            <a href="/mesa/<%- mesa.mesa_id %>" class="btn btn-warning <%- mesa.mesa_status %>" id="<%- mesa.mesa_id %>">Mesa <%- mesa.mesa_id %><br><img src="/img/mesa.png" alt="Mesa"></a>
        <% }); %>
    </main>
    <footer>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script src="/js/mesas.js"></script>
    </footer>
    <% if (typeof alert != "undefined")  { %>
        <script>
            Swal.fire({
                title:'<%= alertTitle %>',
                text:'<%= alertMessage %>',
                icon:'<%= alertIcon %>',
                showConfirmButton: <%= showConfirmButton %>,
                timer: <%= timer %>
            })
        </script>
    <% } %>
</body>
</html>
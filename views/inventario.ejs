<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>INVENTARIO || Wings and Chunks || WAC-POS</title>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/inventario.css">
    <link href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <img src="/img/logo.jpg" alt="Wings and Chunks" class="header_logo">
        <button class="btn-danger" id="btnSalir">Regresar</button>
    </header>
    <main class="container" id="main">
        <table id="myTable">
            <caption>INVENTARIO</caption>
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Categoria</th>
                <th scope="col">Precio Unitario</th>
              </tr>
            </thead>
            <tbody>
            <% Items.forEach((item)=>{ %>
              <tr>
                <th scope="row"><%-item.item_id%></th>
                <td><%-item.item_name%></td>
                <td><%-item.item_category%></td>
                <td>$<%-item.item_unit_price%></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
    </main>
    <footer>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
        <script src="/js/inventario.js"></script>
    </footer>
</body>
</html>